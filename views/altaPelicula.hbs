{{> header}}

  {{>modal}}
  <div class="container-fluid text-white">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">


            <h1 class="text-center p-2 mt-4">Agregar pelicula a la lista</h1>
             

             <form action="/tienda/alta" method="post" enctype="multipart/form-data">
                      <div class="form-group my-3">
                         <label for="formGroupExampleInput">Id Genero</label> 
                         <input type="text" class="form-control" id="formGroupExampleInput" name="genero_id"> 
                     </div>
                     <div class="form-group my-3">
                         <label for="formGroupExampleInput">Titulo</label> 
                         <input type="text" class="form-control" id="formGroupExampleInput" name="titulo"> 
                     </div>
                     <div class="form-group my-3">
                       <label for="formGroupExampleInput2">Sinopsis</label> 
                           <input type="text" class="form-control" id="formGroupExampleInput2" name="descripcion"> 
                     </div>
                     <div class="form-group my-3">
                           <label for="exampleFormControlFile1">Imagen</label>
                             <input type="file" class="form-control" id="exampleFormControlFile1" name="imagen"> 
                     </div>

                     <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" class="btn btn-secondary btn-block mt-5 create-button" >Agregar pelicula a la lista</button>
                         <a href="/tienda" class="btn btn-secondary btn-block mt-4 cancel-button">Cancelar</a>
                     </div>

                     
             </form>
        </div>
    </div>
  </div>

{{>footer}}